<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/navigation"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/space20"
        android:paddingBottom="@dimen/space10">

        <LinearLayout
            android:id="@+id/layoutDots"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space30"
            android:layout_marginBottom="@dimen/space20"
            android:gravity="center"
            android:orientation="horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="@dimen/space20">

            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space30dp"
                android:text="NEXT"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/btn_color"
                android:layout_marginRight="@dimen/space20"
                android:layout_marginEnd="@dimen/space20"
                />

            <Button
                android:id="@+id/btn_skip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space30dp"
                android:text="Skip"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/btn_color"
                android:layout_marginRight="@dimen/space20"
                android:layout_marginEnd="@dimen/space20"
                />
        </LinearLayout>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:layout_above="@id/navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pager"/>
</RelativeLayout>